container_commands:
  01_makemigrations:
    command: "django-admin.py makemigrations --merge"
    leader_only: true
  02_migrate:
    command: "django-admin.py migrate"
  03_collectstatic:
    command: "django-admin.py collectstatic --noinput"
  04_createsuperuser:
    command: "(echo \"import os\"; echo \"from django.contrib.auth import get_user_model\"; echo \"UserModel = get_user_model()\"; echo \"if not UserModel._default_manager.filter(username='admin').exists(): UserModel._default_manager.create_superuser(**dict(username='admin',email='admin@example.com',password='shylee'));\") | django-admin.py shell"
    leader_only: true  
option_settings:
  aws:elasticbeanstalk:application:environment:
    DJANGO_SETTINGS_MODULE: mentorapp.settings