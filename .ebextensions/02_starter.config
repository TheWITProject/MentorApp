container_commands:
  01_migrate:
    command: "python MentorApp/manage.py migrate"
    leader_only: true
  02_collectstatic:
    command: "python MentorApp/manage.py collectstatic --noinput"
  03_createsu:
    command: "python MentorApp/manage.py createsu"
    leader_only: true
option_settings:
  "aws:elasticbeanstalk:application:environment":
    DJANGO_SETTINGS_MODULE: "MentorApp.settings"
    "PYTHONPATH": "/opt/python/current/app/MentorApp:$PYTHONPATH"
    "ALLOWED_HOSTS": ".elasticbeanstalk.com"
  "aws:elasticbeanstalk:container:python":
    WSGIPath: "MentorApp/mentorapp/wsgi.py"
    StaticFiles: "/static/=MentorApp/static/"